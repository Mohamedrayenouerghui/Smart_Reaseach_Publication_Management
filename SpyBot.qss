/*-----QComboBox-----*/
QComboBox
{
    background-color: white;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 14px;
    font-weight: 400;
    color: #2d3748;
    min-width: 120px;
}

QComboBox:hover
{
    border-color: #cbd5e0;
}

QComboBox:focus
